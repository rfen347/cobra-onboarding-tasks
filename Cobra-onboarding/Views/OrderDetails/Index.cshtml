@model IEnumerable<Cobra_onboarding.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div ng-app="onboardapp">
    <div ng-controller="OrdersController">
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add</button>
        <table class="table">
            <tr>
                <th>Order Id</th>
                <th>Date</th>
                <th>Customer Name</th>
                <th>Product</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
            <tr ng-repeat="order in OrdersList">
                <td>{{order.OrderId}}</td>
                <td>{{order.Date.getDate()}}/{{order.Date.getMonth() + 1}}/{{order.Date.getFullYear()}}</td>
                <td>{{order.CustomerName}}</td>
                <td>{{order.Product}}</td>
                <td>{{order.Price}}</td>
                <td>
                    <a href="#" data-toggle="modal" data-target="#myModal" ng-click="edit(order)">Edit</a>/
                    <a hred="#" ng-click="delete(order)">Delete</a>
                </td>

            </tr>

        </table>

        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Add Customer</h4>
                    </div>
                    <div class="modal-body">
                        <form name="addFriendForm">
                            OrderId:
                            <input ng-model="OrderId" class="form-control" type="text" placeholder="Name" title="Name" readonly />
                            Date:
                            <input ng-model="Date" class="form-control" type="date" placeholder="Address1" title="Address1" />
                            Customer Name:
                            <select  ng-model="Customer" ng-options="c.Name for c in CustomerList" class="form-control" type="text" placeholder="Address2" title="Address2"></select>
                            Product:
                            <select ng-model="Product" ng-options=" p.ProductName for p in ProductList" class="form-control" type="text" placeholder="City" title="City"></select>
                            Price:
                            ${{Product.Price}}
                            
                        </form>
                    </div>

                    <div class="modal-footer">
                        <button type="button" ng-click="submit()" class="btn btn-default" data-dismiss="modal">Submit</button>
                        <button type="button" ng-click="reset()"class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>